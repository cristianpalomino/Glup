<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C7EBEB"
    android:id="@+id/scrollView">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext_rounded"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="LADO A"
                android:textStyle="bold"
                android:padding="10dp"
                android:id="@+id/ladoa"
                android:gravity="center_vertical"
                android:textColor="@color/color_letra"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageladoa"
                android:adjustViewBounds="true"
                android:visibility="visible"
                android:scaleType="centerInside"
                android:layout_gravity="center_vertical"
                android:src="@android:drawable/ic_menu_camera"
                android:layout_weight="1" />
        </LinearLayout>

        <ImageView
            android:background="@drawable/edittext_rounded"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/preview_a"
            android:src="@drawable/ic_launcher_web"
            android:adjustViewBounds="true"
            android:layout_marginBottom="5dp"
            android:scaleType="centerInside"
            android:visibility="visible" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext_rounded">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="LADO B"
                android:textColor="@color/color_letra"
                android:textStyle="bold"
                android:padding="10dp"
                android:id="@+id/ladob"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageladob"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:visibility="visible"
                android:layout_gravity="center_horizontal"
                android:src="@android:drawable/ic_menu_camera"
                android:layout_weight="1" />
        </LinearLayout>


        <ImageView
            android:background="@drawable/edittext_rounded"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/preview_b"
            android:src="@drawable/ic_launcher_web"
            android:adjustViewBounds="true"
            android:layout_marginBottom="5dp"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:hint="User Code"
            android:ems="10"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:id="@+id/codigo"
            android:background="@drawable/edittext_rounded" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:hint="Marca"
            android:ems="10"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:id="@+id/marca"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edittext_rounded" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Talla"
            android:ems="10"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:id="@+id/talla"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edittext_rounded"
            android:inputType="number" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:hint="PosiciÃ³n Prenda"
                android:ems="10"
                android:padding="8dp"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:id="@+id/tipoprenda"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edittext_rounded"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:hint="Estilo"
                android:ems="10"
                android:padding="8dp"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:id="@+id/estilo"
                android:background="@drawable/edittext_rounded"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:hint="Tipo Modelo"
                android:ems="10"
                android:padding="8dp"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:id="@+id/tipomodelo"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edittext_rounded"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:hint="Modelo Prenda"
                android:ems="10"
                android:padding="8dp"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:id="@+id/modeloprenda"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edittext_rounded"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:hint="Correlativo"
                android:ems="10"
                android:padding="8dp"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:id="@+id/correlativo"
                android:background="@drawable/edittext_rounded"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:hint="Genero"
                android:ems="10"
                android:padding="8dp"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:id="@+id/genero"
                android:background="@drawable/edittext_rounded"
                android:layout_weight="1" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:textColor="@color/color_blanco"
            android:id="@+id/enviar"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/holo_flat_button_azul_claro" />

    </LinearLayout>
</ScrollView>
